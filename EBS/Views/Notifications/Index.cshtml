@model IEnumerable<EBS.Models.Model.Products.Notification>
<link href="~/css/common/datatable.css" rel="stylesheet" />
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1 class="text-2xl font-bold mb-4">Notifications</h1>

<p class="mb-4">
    <a asp-action="Create" class="bg-blue-500 text-white px-4 py-2 rounded hover:bg-blue-600">Create New</a>
</p>

<div class="overflow-x-auto">
    <table id="export-table" class="min-w-full bg-white shadow-md rounded-lg">
        <thead class="bg-gray-200">
            <tr>
                <th class="px-4 py-2 text-left text-gray-600">@Html.DisplayNameFor(model => model.Product)</th>
                <th class="px-4 py-2 text-left text-gray-600">@Html.DisplayNameFor(model => model.Message)</th>
                <th class="px-4 py-2 text-left text-gray-600">@Html.DisplayNameFor(model => model.NotificationDate)</th>
                <th class="px-4 py-2 text-left text-gray-600">@Html.DisplayNameFor(model => model.IsRead)</th>
                <th class="px-4 py-2 text-left text-gray-600">@Html.DisplayNameFor(model => model.CreatedTimeStamp)</th>
                <th class="px-4 py-2 text-left text-gray-600">@Html.DisplayNameFor(model => model.UpdatedTimeStamp)</th>
                <th class="px-4 py-2 text-left text-gray-600">Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr class="hover:bg-gray-100">
                    <td class="px-4 py-2 border-b">@Html.DisplayFor(modelItem => item.Product.Category)</td>
                    <td class="px-4 py-2 border-b">@Html.DisplayFor(modelItem => item.Message)</td>
                    <td class="px-4 py-2 border-b">@Html.DisplayFor(modelItem => item.NotificationDate)</td>
                    <td class="px-4 py-2 border-b">@Html.DisplayFor(modelItem => item.IsRead)</td>
                    <td class="px-4 py-2 border-b">@Html.DisplayFor(modelItem => item.CreatedTimeStamp)</td>
                    <td class="px-4 py-2 border-b">@Html.DisplayFor(modelItem => item.UpdatedTimeStamp)</td>
                    <td class="px-4 py-2 border-b">
                        <a asp-action="Edit" asp-route-id="@item.Id" class="text-blue-500 hover:underline">Edit</a> |
                        <a asp-action="Details" asp-route-id="@item.Id" class="text-blue-500 hover:underline">Details</a> |
                        <a asp-action="Delete" asp-route-id="@item.Id" class="text-red-500 hover:underline">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
<script src="https://cdn.jsdelivr.net/npm/simple-datatables@9.0.3"></script>
<script src="~/js/common/datatable.js"></script>