@model List<EBS.Models.Model.ManageUserRolesViewModel>

@{
    ViewData["Title"] = "Manage";

    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- Form for Managing User Roles -->
<form method="post" class="max-w-3xl mx-auto p-4 bg-white shadow-md rounded-lg">
    <div class="mb-6">
        <h2 class="text-2xl font-semibold mb-2">Manage User Roles</h2>
        <p class="text-gray-600">Add/Remove Roles for User: <span class="font-semibold">@ViewBag.UserName</span></p>
    </div>

    <!-- Roles Selection List -->
    <div class="grid grid-cols-1 gap-4">
        @for (int i = 0; i < Model.Count; i++)

        {
            <div class="flex items-center">
                <input type="hidden" asp-for="@Model[i].RoleId" />
                <input type="hidden" asp-for="@Model[i].RoleName" />
                <input asp-for="@Model[i].Selected" class="form-checkbox h-4 w-4 text-blue-600 border-gray-300 rounded focus:ring-blue-500" />
                <label class="ml-2 text-gray-700" asp-for="@Model[i].Selected">@Model[i].RoleName</label>
            </div>
        }
    </div>

    <!-- Validation Summary -->
    <div asp-validation-summary="All" class="text-red-600 mt-4"></div>

    <!-- Buttons for Submitting and Canceling -->
    <div class="mt-6 flex justify-between">
        <button type="submit" class="bg-blue-500 text-white px-4 py-2 rounded-md hover:bg-blue-600 focus:outline-none focus:ring-2 focus:ring-blue-400">
            Update
        </button>
        <a asp-action="EditUser" asp-route-id="@ViewBag.userId"
           class="bg-gray-500 text-white px-4 py-2 rounded-md hover:bg-gray-600 focus:outline-none focus:ring-2 focus:ring-gray-400">
            Cancel
        </a>
    </div>
</form>
