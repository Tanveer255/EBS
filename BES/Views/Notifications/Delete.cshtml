@model EBS.Models.Model.Products.Notification

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1 class="text-2xl font-bold mb-4">Delete Notification</h1>

<h3 class="text-lg mb-4">Are you sure you want to delete this?</h3>

<div class="max-w-md mx-auto bg-white shadow-md rounded-lg p-6">
    <h4 class="text-lg font-semibold mb-2">Notification Details</h4>
    <hr class="mb-4" />

    <dl class="grid grid-cols-1 md:grid-cols-2 gap-4">
        <dt class="font-medium text-gray-700">
            @Html.DisplayNameFor(model => model.UserId)
        </dt>
        <dd class="text-gray-900">
            @Html.DisplayFor(model => model.UserId)
        </dd>

        <dt class="font-medium text-gray-700">
            @Html.DisplayNameFor(model => model.Product)
        </dt>
        <dd class="text-gray-900">
            @Html.DisplayFor(model => model.Product.Category)
        </dd>

        <dt class="font-medium text-gray-700">
            @Html.DisplayNameFor(model => model.Message)
        </dt>
        <dd class="text-gray-900">
            @Html.DisplayFor(model => model.Message)
        </dd>

        <dt class="font-medium text-gray-700">
            @Html.DisplayNameFor(model => model.NotificationDate)
        </dt>
        <dd class="text-gray-900">
            @Html.DisplayFor(model => model.NotificationDate)
        </dd>

        <dt class="font-medium text-gray-700">
            @Html.DisplayNameFor(model => model.IsRead)
        </dt>
        <dd class="text-gray-900">
            @Html.DisplayFor(model => model.IsRead)
        </dd>

        <dt class="font-medium text-gray-700">
            @Html.DisplayNameFor(model => model.IsDeleted)
        </dt>
        <dd class="text-gray-900">
            @Html.DisplayFor(model => model.IsDeleted)
        </dd>

        <dt class="font-medium text-gray-700">
            @Html.DisplayNameFor(model => model.CreatedTimeStamp)
        </dt>
        <dd class="text-gray-900">
            @Html.DisplayFor(model => model.CreatedTimeStamp)
        </dd>

        <dt class="font-medium text-gray-700">
            @Html.DisplayNameFor(model => model.UpdatedTimeStamp)
        </dt>
        <dd class="text-gray-900">
            @Html.DisplayFor(model => model.UpdatedTimeStamp)
        </dd>
    </dl>

    <form asp-action="Delete" class="mt-4">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="bg-red-600 text-white px-4 py-2 rounded-md hover:bg-red-700 cursor-pointer" />
        <a asp-action="Index" class="ml-2 text-blue-500 hover:underline">Back to List</a>
    </form>
</div>
